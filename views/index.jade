doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, minimum-scale=1.0, maximum-scale=1.0')
		meta(name='apple-mobile-web-app-capable', content='yes')
		meta(name='mobile-web-app-capable', content='yes')
		link(href='bower_components/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
		link(href='css/main.css', rel='stylesheet')
		title SMSSync
	body
		#wrapper
			#sidebar-wrapper.side-nav.fixed
				ul.sidebar-nav
					li.sidebar-brand
						a(href='#') SMSSync
		#page-content-wrapper
			section
				.container
					.row
						.col-lg-6.text-center
							h1#recipient
								| Send a message!
							#chat-wrapper
							input#message-input.form-control(type='text', placeholder='Message')
							button.btn.btn-success.btn-lg#send Send
		script(src='bower_components/jquery/dist/jquery.min.js')
		script(src='bower_components/bootstrap/dist/js/bootstrap.min.js')
		script(src='https://www.gstatic.com/firebasejs/3.6.2/firebase.js')
		script(src='https://www.gstatic.com/firebasejs/3.6.2/firebase-database.js')
		script(src='js/main.js')